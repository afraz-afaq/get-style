    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register Customer|Shop|Stylist",
                "operationId": "register",
                "requestBody": {
                    "description": "Register a new user.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "full_name": {
                                        "description": "fullname of the user.",
                                        "type": "string",
                                        "example": "Asad Shareef"
                                    },
                                    "email": {
                                        "description": "email of the user.",
                                        "type": "string",
                                        "example": "asad@gmail.com"
                                    },
                                    "phone": {
                                        "description": "Phone of the user.",
                                        "type": "string",
                                        "example": "923482269069"
                                    },
                                    "account_type": {
                                        "description": "Type of user.",
                                        "type": "integer",
                                        "example": "1"
                                    },
                                    "password": {
                                        "description": "Password of the user.",
                                        "type": "string",
                                        "example": "IamAsecretHero"
                                    },
                                    "password_confirmation": {
                                        "description": "Confirmed password of the user.",
                                        "type": "string",
                                        "example": "IamAsecretHero"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login User",
                "operationId": "login",
                "requestBody": {
                    "description": "Login User to the system.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "user login email address provided on signup to Nonsulin",
                                        "type": "string",
                                        "example": "asad@getstyle.com"
                                    },
                                    "password": {
                                        "description": "user secure password.",
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
